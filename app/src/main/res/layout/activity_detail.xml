<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/actionBarDetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:id="@+id/txtSubCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="detail"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/rubik_light"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@+id/actionBarDetail"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBerita"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/txtJudulBerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Judul Berita"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/imgBerita"
                />

            <TextView
                android:id="@+id/txtTglBerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtJudulBerita"
                android:textSize="16sp"
                android:text="Tanggal Berita"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/txtEditorBerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtJudulBerita"
                android:textSize="16sp"
                android:text="Penulis Berita"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>
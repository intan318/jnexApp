<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CategoryFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jeworld"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/rubik_light"
            android:textColor="@color/black"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_view_onestop"
            android:layout_gravity="center"
            app:cardCornerRadius="2dp"
            app:cardElevation="1dp"
            android:innerRadius="1dp"
            android:outlineAmbientShadowColor="@color/cardview_shadow_start_color">


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/category_onestop" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_view_businessexp"
            android:layout_gravity="center"
            app:cardCornerRadius="2dp"
            app:cardElevation="1dp"
            android:innerRadius="1dp"
            android:outlineAmbientShadowColor="@color/cardview_shadow_start_color">


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_category2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/category_businessexp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_view_investment"
            android:layout_gravity="center"
            app:cardCornerRadius="2dp"
            app:cardElevation="1dp"
            android:innerRadius="1dp"
            android:outlineAmbientShadowColor="@color/cardview_shadow_start_color">


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_category3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/category_investment" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_view_child"
            android:layout_gravity="center"
            app:cardCornerRadius="2dp"
            app:cardElevation="1dp"
            android:innerRadius="1dp"
            android:outlineAmbientShadowColor="@color/cardview_shadow_start_color">


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_category4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/category_child" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>

</ScrollView>
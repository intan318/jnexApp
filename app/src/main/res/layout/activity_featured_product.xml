<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FeaturedProductActivity"

    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/featured_products"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/rubik_light"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />

    <View
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="0dp"
        android:background="#F0EDED"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_featured_products"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onsale_products"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/rubik_light"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />

    <View
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="0dp"
        android:background="#F0EDED"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_onsale_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>

</ScrollView>